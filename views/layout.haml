!!! 5
%html{:lang => "ru",  :class => "no-js"}
  %head
    %meta{:content => "text/html; charset=utf-8",
          "http-equiv" => "Content-Type"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:name => 'description',
          :content => '###description###'}/
    %meta{:name => 'author', :content => '###em@il###'}/

    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }/
    -# No zooming.
    -# %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0, maximum-scale=1" }/
      
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}/
    %link{:href => "/stylesheets/style.css?v=1", :rel => "stylesheet",
          :type => "text/css"}/
    %script{:src => "/js/modernizr.js?v=1"}
    %title ###title###
    /[if IE]
      <script src='/js/ie.js></script>
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '###your UA-ID###']);
      _gaq.push(['_trackPageview']);
      (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();      
      
  %body
    = yield
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"}
    :javascript
      window.jQuery || document.write('<script src="js/jquery.js?v=1"><\/script>')
    = yield_content(:scripts)